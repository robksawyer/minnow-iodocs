{
  "name": "Minnow API (Facebook Login)",
  "protocol": "rest",
  "basePath": "http://api.gominnow.com",
  "publicPath": "",
  "auth": {
    "oauth": {
      "version": "2.0",
      "type": "authorization_code",
      "base_uri": "http://api.gominnow.com/",
      "authorize_uri": "auth/login?type=facebook",
      "access_token_uri": "auth/facebook_oauth2",
      "token": {
        "param": "code",
        "location": "query"
      }
    }
  },
  "headers": {
      "Accept": "application/json"
  },
  "resources" : {
    "Posts": {
      "methods": {
        "latest": {
          "name": "Latest Posts",
          "description": "Returns the latest posts.",
          "httpMethod": "GET",
          "path": "/post/latest",
            "parameters": {
                "limit": {
                    "title":"limit",
                    "required":false,
                    "default": 10,
                    "type":"number",
                    "description":"Return a certain number."
                },
                "skip": {
                    "title":"skip",
                    "required":false,
                    "default": 0,
                    "type":"number",
                    "description":"This is used for paging. Skip the number of posts you want."
                }
            }
        }
      }
    }
  }
}