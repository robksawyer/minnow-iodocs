{
  "name": "Minnow API",
  "protocol": "rest",
  "basePath": "http://api.gominnow.com",
  "publicPath": "",
  "auth": {
    "oauth": {
      "version": "2.0",
      "type": "implicit",
      "base_uri": "http://api.gominnow.com/",
      "access_token_uri": "user/jwt"
    }
  },
  "headers": {
      "Accept": "application/json"
  },
  "resources" : {
    "Posts": {
      "methods": {
        "latest": {
          "name": "Latest",
          "description": "Returns the latest posts.",
          "httpMethod": "GET",
          "path": "/post/latest",
            "parameters": {
                "limit": {
                    "title":"limit",
                    "required":false,
                    "default": 10,
                    "type":"number",
                    "description":"Return a certain number."
                },
                "skip": {
                    "title":"skip",
                    "required":false,
                    "default": 0,
                    "type":"number",
                    "description":"This is used for paging. Skip the number of posts you want."
                }
            }
        }
      }
    }
  }
}