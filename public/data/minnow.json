{
  "name": "Minnow API",
  "protocol": "rest",
  "basePath": "http://api.gominnow.com",
  "publicPath": "",
  "auth": {
    "key": {
      "param": "access_token"
    }
  },
  "headers": {
      "Accept": "application/json"
  },
  "resources" : {
    "User Login": {
      "methods": {
        "login": {
          "name": "User Login",
          "description": "Logs a user in and enables access to token.",
          "httpMethod": "POST",
          "path": "/auth/login",
            "parameters": {
                "type": {
                    "title":"type",
                    "required":false,
                    "default": "local",
                    "type":"string",
                    "description":"Login type.",
                    "enum": ["local","facebook"]
                },
                "phone": {
                    "title":"phone number",
                    "required":false,
                    "default": "",
                    "type":"string",
                    "description":"The phone number you signed up with."
                },
                "password": {
                    "title":"password",
                    "required":false,
                    "default": "",
                    "type":"string",
                    "description":"Password for your account."
                }
            }
        }
      }
    },
    "Posts": {
      "methods": {
        "latest": {
          "name": "Latest Posts",
          "description": "Returns the latest posts.",
          "httpMethod": "GET",
          "path": "/post/latest",
            "parameters": {
                "limit": {
                    "title":"limit",
                    "required":false,
                    "default": 10,
                    "type":"number",
                    "description":"Return a certain number."
                },
                "skip": {
                    "title":"skip",
                    "required":false,
                    "default": 0,
                    "type":"number",
                    "description":"This is used for paging. Skip the number of posts you want."
                }
            }
        }
      }
    }
  }
}